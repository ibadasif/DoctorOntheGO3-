<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Maps"
    android:background="@drawable/blackb">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="763dp"
        android:layout_height="234dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/mdoct"
        app:layout_constraintBottom_toTopOf="@+id/sdoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/sdoc"
        android:layout_width="470dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/days_one"
        android:text="SEARCH FOR YOUR SPECIFIC DOCTOR"
        android:textColor="@android:color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/shos"
        android:layout_width="470dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:fontFamily="@font/days_one"
        android:text="SEARCH FOR HOSPITALS NEAR BY YOU"
        android:textColor="@android:color/white"
        android:textSize="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sdoc" />


</androidx.constraintlayout.widget.ConstraintLayout>